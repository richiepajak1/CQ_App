ScreenManagement:
    HomeScreen:
    DriveScreen:
    KnowledgeScreen:
    StrategyScreen:
    ActionScreen:
    ProgressScreen:


<HomeScreen>:
    name: 'home_screen'
    FloatLayout:
        #
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        #The
        Button:
            id: pb_button
            pos_hint: {'left': 1, 'top': 1}
            size_hint: .38, .11
            on_release:
                app.root.current = 'progress_screen'
                root.manager.transition.direction = "left"

        ProgressBar:
            id: progress_screen_pb
            pos_hint: {'x': .05, 'top': .97}
            size_hint_x: .3
            size_hint_y: None
            height: '48dp'
            value: 60

        Label:
            id: sub_post_1
            markup: True
            text: "Progress...."
            pos_hint: {'x': .135, 'top': .97}
            size_hint: .1, 0

        Label:
            id: message_board
            height: self.texture_size[1]
            markup: True
            text: '[color=ff0000]Welcome to the app'
            pos_hint: {'x': .25, 'y': -.1}

        Label:
            id: message_board
            height: self.texture_size[1]
            text: 'Hello <insert student name>'
            pos_hint: {'x': .25, 'y': .35}

        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'x': 0, 'bottom': 1}
            size_hint: .5, .75
            #
            Button:
                canvas.before:
                    Color:
                        rgba: 1, .5, .3, 1
                    Line:
                        width: 1.05
                        rectangle: self.x, self.y, self.width, self.height
                background_color: 0, 0, 0, 1
                on_release:
                    app.root.current = 'drive_screen'
                    root.manager.transition.direction = "left"
                markup: True
                text: '[b]Drive'
                font_size: 20

            Button:
                canvas.before:
                    Color:
                        rgba: 1, .5, .3, 1
                    Line:
                        width: 1.05
                        rectangle: self.x, self.y, self.width, self.height
                background_color: .2, 1.5, .7, 1
                on_release:
                    app.root.current = 'knowledge_screen'
                    root.manager.transition.direction = "left"
                markup: True
                text: 'Knowledge'
                font_size: 20

            Button:
                canvas.before:
                    Color:
                        rgba: 1, .5, .3, 1
                    Line:
                        width: 1.05
                        rectangle: self.x, self.y, self.width, self.height
                on_release:
                    app.root.current = 'strategy_screen'
                    root.manager.transition.direction = "left"
                markup: True
                text: '[u]Strategy'
                font_size: 20

            Button:
                canvas.before:
                    Color:
                        rgba: 1, .5, .3, 1
                    Line:
                        width: 1.05
                        rectangle: self.x, self.y, self.width, self.height

                on_release:
                    app.root.current = 'action_screen'
                    root.manager.transition.direction = "left"
                background_color: 0, 0, 0, 1
                markup: True
                text: '[i][u][b]Action!'
                font_size: 30
                color: .8, 0, .4, 1

            Button:
                canvas.before:
                    Color:
                        rgba: 1, .5, .3, 1
                    Line:
                        width: 1.05
                        rectangle: self.x, self.y, self.width, self.height

                on_release:
                    app.root.current = 'progress_screen'
                    root.manager.transition.direction = "left"
                markup: True
                text: 'progress'
                font_size: 20


<DriveScreen>:
    name: 'drive_screen'
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0, .7, .7, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            id: sub_post_1
            pos_hint: {'left': 1, 'top': 1}
            size_hint: .38, .11

        ProgressBar:
            id: progress_screen_pb
            pos_hint: {'x': .05, 'top': .97}
            size_hint_x: .3
            size_hint_y: None
            height: '48dp'
            value: 60

        Label:
            id: sub_post_1
            text: "Progress %"
            pos_hint: {'x': .135, 'top': .97}
            size_hint: .1, 0

        Label:
            id: message_board
            height: self.texture_size[1]
            text: 'Hello <insert student name>'
            pos_hint: {'x': .25, 'y': .35}

        TextInput:
            id: subreddit_input
            hint_text: "Enter a subreddit"
            pos_hint: {'left': 1, 'bottom': 1}
            size_hint: .4, .2

        Button:
            id: subreddit_submit
            text: "Search"
            pos_hint: {'x': .4, 'bottom': 1}
            size_hint: .3, .2

        Button:
            on_release:
                app.root.current = 'home_screen'
                root.manager.transition.direction = "right"
            text: '  back to the\n home screen'
            font_size: 17
            pos_hint: {'right': 1, 'bottom': 1}
            size_hint: .3, .2


